                android:gravity="left|center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/closed"
                android:id="@+id/saturday_t0"
                android:layout_weight="0.5"
                android:gravity="left|center"
                android:onClick="onClickToSetData"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/closed"
                android:id="@+id/saturday_period"
                android:layout_weight="0.5"
                android:onClick="onClickToSetData" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/closed"
                android:id="@+id/saturday_idle"
                android:layout_weight="0.5"
                android:onClick="onClickToSetData" />

        </TableRow>
            <ImageView android:background="#ffff0000"
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:id="@+id/line_7" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/sunday"
                    android:id="@+id/sunday"
                    android:layout_weight="0.5"
                    android:gravity="left|center" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/closed"
                    android:id="@+id/sunday_t0"
                    android:layout_weight="0.5"
                    android:gravity="left|center"
                    android:onClick="onClickToSetData"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/closed"
                    android:id="@+id/sunday_period"
                    android:layout_weight="0.5"
                    android:onClick="onClickToSetData"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/closed"
                    android:id="@+id/sunday_idle"
                    android:layout_weight="0.5"
                    android:onClick="onClickToSetData" />

            </TableRow>

        <ImageView android:background="#ffff0000"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:id="@+id/line_end" />
        
    </LinearLayout>

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:textSize="30dp"
            android:textColor="#ff0b0801"
            android:background="#ffffa012"
            android:onClick="confirmOK" />

    </LinearLayout>
</ScrollView>
