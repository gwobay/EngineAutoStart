    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.prod.intelligent7.engineautostart.ScheduleActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView

            android:layout_width="match_parent"
            android:background="#ffff0000"
            android:layout_height="2dip"
            android:id="@+id/line_begin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.5"
            android:background="#ffff0000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:text="@string/week_day"
                android:id="@+id/header_day"
                android:layout_weight="0.5"
                android:gravity="left|center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:text="@string/start_time"
                android:id="@+id/header_t0"
                android:layout_weight="0.5"
                android:gravity="left|center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:text="@string/active_time"
                android:id="@+id/header_4"
                android:layout_weight="0.5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:text="@string/idle_time"
                android:id="@+id/header_idle"
                android:layout_weight="0.5"
                android:gravity="center" />
        </TableRow>
        <ImageView android:background="#ffff1c0a"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:id="@+id/line0" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/monday"
                android:id="@+id/monday"
                android:layout_weight="0.5"
                android:gravity="left|center" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/closed"
                android:id="@+id/monday_t0"
                android:layout_weight="0.5"
                android:gravity="left|center"
                android:onClick="onClickToSetData" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/closed"
                android:id="@+id/monday_period"
                android:gravity="center"
                android:layout_weight="0.5"
                android:onClick="onClickToSetData"/>
            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/closed"
            android:id="@+id/monday_idle"
                android:layout_weight="0.5"
                android:onClick="onClickToSetData"/>
        </TableRow>
        <ImageView android:background="#ffff0000"
